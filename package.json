{
  "name": "pec1",
  "version": "2.0.0",
  "private": true,
  "description": "PEC1 de la asignatura “Herramientas HTML y CSS II” del máster de Desarrollo de Sitios y Aplicaciones Web de la UOC",
  "scripts": {
    "parcel:serve": "parcel src/index.html -p 8123 --target web --open",
    "parcel:build": "parcel build src/index.html --target web --no-source-maps --no-cache",
    "clean": "rimraf dist .cache .cache-loader .parcel-cache",
    "dev": "npm-run-all clean parcel:serve",
    "build": "npm-run-all clean stylelint parcel:build",
    "stylelint": "stylelint src/**/*.scss",
    "test": "echo 'Everything is working as expected ✅\nStart working on your project by running \\033[1mnpm run dev\\033[0m'"
  },
  "web": "dist/index.html",
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./",
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cborcar/M4.258-PEC1.git"
  },
  "author": {
    "name": "Cayetano Borja Carrillo",
    "email": "cborcar@uoc.edu"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cborcar/M4.258-PEC1/issues"
  },
  "homepage": "https://github.com/cborcar/M4.258-PEC1.git#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.2.0",
    "autoprefixer": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.2.0",
    "postcss-preset-env": "^7.3.1",
    "posthtml-include": "^1.7.2",
    "rimraf": "^3.0.2",
    "sharp": "^0.29.3",
    "stylelint": "^14.5.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.0.0"
  }
}
